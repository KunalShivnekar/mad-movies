<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/image_width_similar_film"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:layout_marginStart="@dimen/gutter">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/image_width_similar_film"
        android:layout_height="@dimen/image_height_similar_film"
        android:layout_marginEnd="@dimen/gutter"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorAccent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/MovieDB.TextAppearance.Body.Small.SemiBold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        tools:text="The Godfather I " />

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/MovieDB.TextAppearance.Body.XSmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="Action" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_rating"
        android:drawablePadding="6dp"
        android:padding="6dp"
        android:textAppearance="@style/MovieDB.TextAppearance.Body.XSmall.Inverted"
        app:drawableStartCompat="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genre"
        tools:text="8.4" />
</androidx.constraintlayout.widget.ConstraintLayout>
